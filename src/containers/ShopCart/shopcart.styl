#shopCart
  width 100%
  height 100%
  .sc_header
    width 100%
    height 88px
    text-align center
    position relative
    border-bottom 1px solid #ececec
    .sch_text
      display inline-block
      height 100%
      line-height 88px
      font-size 36px
    .sch_right
      height 100%
      position absolute
      top 0
      right 50px
      line-height 88px
      font-size 30px
      color #B4282D

  .sc_content
    width 100%
    height 1146px
    background #f4f4f4
    position relative
    .scc_info
      box-sizing border-box
      width 100%
      height 70px
      padding 30px 0
      margin-top 30px
      color #696969
      .scc_ul
        width 100%
        height 100%
        display flex
        justify-content space-around
    .scc_img
      width 248px
      height 248px
      background url("../../assets/images/shopcart/1.png") no-repeat 100%
      position absolute
      top -70px
      left 0
      right 0
      bottom 0
      margin auto
    .scc_text
      width 100%
      text-align center
      position fixed
      top 785px
      left 0
      >div
        display inline-block
      .scc_tt
        width 100%
        color #999
        font-size 28px
        text-align center
        padding-bottom 50px
      .scc_login
        width 480px
        height 92px
        background #b4282d
        color white
        text-align center
        line-height 92px
        font-size 30px
