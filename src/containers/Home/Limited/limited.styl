#limited
  background-color white
  width 100%
  height 380px
  display flex
  justify-content space-around
  position relative
  border-top 20px solid #e4e4e4
  .limited_text
    width 334px
    height 320px
    box-sizing border-box
    padding-top 80px
    padding-left 30px
    display flex
    justify-content space-around
    flex-direction column
    .limited_text1
      font-size 36px
      letter-spacing:15px
    .limited_text2
      font-size 32px
      >span
        color white
        display inline-block
        width 62px
        height 56px
        background-color #444
        text-align center
        line-height 56px
    .limited_text3
      font-size 25px
  .limited_img
    width 320px
    height 320px
  .limited_price
    width 96px
    height 96px
    border-radius 50%
    background-color rgba(244,143,24,.95)
    position absolute
    right 60px
    bottom 60px
    .limited_price_con
      width 70px
      height 70px
      color white
      font-size 26px
      margin-top 16px
      margin-left 12px
      .limited_price_con2
        text-decoration line-through