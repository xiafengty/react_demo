#orderCom
  border-top 20px solid #e4e4e4
  box-sizing border-box
  width 100%
  padding 0 30px 20px 30px
  background white
  .orderCom_header
    width 100%
    height 120px
    line-height 120px
    text-align center
    font-size 32px
  .orderCom_content
    width 100%
    .orderCom_content_detail
      width 100%
      .ocd_big
        box-sizing border-box
        width 100%
        height 572px
        border-radius 8px
        border 0.5px solid #d8d8d8
        .ocd_big_img
          width 100%
          height 386px
          position relative
          >img
            width 100%
            height 100%
            border-radius 8px 8px 0 0
          .ocd_big_detail
            position absolute
            top 20px
            left 20px
            height 36px
            padding 0 15px
            border-radius 36px
            border 0.5px solid #dcdcdc
            background white
            text-align center
            line-height 36px
        .ocd_big_text
          width 668px
          height 186px
          padding 24px 20px 0
          display flex
          justify-content space-between
          .obt_1
            font-size 35px
            margin-top 10px
          .obt_2
            font-size 28px
            color #7f7f7f
            margin-top 30px
          .ocd_big_text2
            font-size 35px
            margin-right 20px
      .ocd_small1
        margin-top 30px
        margin-bottom 30px
        width 100%
        height 272px
        border 0.5px solid #d8d8d8
        border-radius 8px
        display flex
        .ocd_small1_left
          box-sizing border-box
          padding 20px
          width 408px
          height 100%
          .osl_user
            width 100%
            height 48px
            .osl_user_header
              float left
              width 46px
              height 46px
              border-radius 50%
              >img
                width 100%
                height 100%
                border-radius 50%
            .osl_user_info
              height 46px
              font-size 20px
              float left
              line-height 46px
              margin-left 10px
          .osl_text
            width 100%
            height 120px
            display flex
            flex-direction column
            justify-content space-around
            margin-top 10px
            .osl_text1
              font-size 32px
              white-space nowrap
              overflow hidden
              text-overflow ellipsis
            .osl_text2
              font-size 25px
              color #7f7f7f
              white-space nowrap
              overflow hidden
              text-overflow ellipsis
        .ocd_small1_right
          width 280px
          height 100%
          position relative
          >img
            width 100%
            height 100%
          .osr_detail
            height 35px
            padding 0 15px
            position absolute
            top 10px
            left 10px
            background white
            border-radius 35px
            text-align center
            line-height 35px